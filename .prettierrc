{
    "$schema": "https://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "overrides": [
        {
            "files": ["*.css", "*.scss", "*.html"],
            "options": {
                "singleQuote": false,
                "bracketSameLine": true
            }
        },
        {
            "files": "composer.json",
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
